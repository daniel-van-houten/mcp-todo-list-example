{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug: Run list_tasks",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/bin/Debug/net9.0/mcp-server-todo-list.dll",
        "args": ["--run-command", "list_tasks"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "stopAtEntry": false
      },
      {
        "name": "Debug: Run create_task",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/bin/Debug/net9.0/mcp-server-todo-list.dll",
        "args": ["--run-command", "create_task", "{\"name\":\"Test Task\",\"status\":\"pending\"}"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "stopAtEntry": false
      },
      {
        "name": "Debug: Run update_task_status",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/bin/Debug/net9.0/mcp-server-todo-list.dll",
        "args": ["--run-command", "update_task_status", "{\"task_id\":1,\"new_status\":\"completed\"}"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "stopAtEntry": false
      }
    ]
  }
